export struct SlintStat {
    name: string,
    short-name: string,
    value: int,
    modifier: string,
    color: color,
    saving-throw-proficiency: bool,
    modifier_with_proficiency: string,
}

export struct SlintSkill {
    name: string,
    proficiency: bool,
    expertise: bool,
    modifier: string,
    color: color,
    stat-short-name: string,
}

export struct SlintMoney {
    cp: int,
    sp: int,
    ep: int,
    gp: int,
    pp: int,
}

export struct SlintShortSpellEntry {
    name: string,
    level: int,
    school: string,
    casting-time: string,
    range: string,
    components: string,
    duration: string,
    description: string,
    higher-levels: string,
    ritual: bool,
    classes: [string],
    prepared: bool,
}


export struct SlintSpellDatabase {
    cantrips: [string],
    spells1: [string],
    spells2: [string],
    spells3: [string],
    spells4: [string],
    spells5: [string],
    spells6: [string],
    spells7: [string],
    spells8: [string],
    spells9: [string],
}

export struct SlintItem {
    name: string,
    description: string,
    amount: int,
}

export struct SlintCharacterShortInfo {
    name: string,
    level: int,
    class: string,
    exp: int,
    image: image,
}

export enum SlintWeaponType {
    Weapon,
    Ammo,
}

export struct SlintWeaponInfo {
    name: string,
    damage: string,
    weapon-type: SlintWeaponType,
    ammo: string,
    properties: string,
    description: string,
    equipped: bool,
}

export struct SlintCharacter {
    name: string,
    level: int,
    class: string,

    exp: int,
    armor-class: int,
    initiative: string,
    initiative-no-dex: string,
    speed: int,

    max-hp: int,
    current-hp: int,
    temp-hp: int,

    hit-dice-total: string,
    hit-dice-left: string,

    money: SlintMoney,
    
    death-saves-successes: int,
    death-saves-failures: int,

    proficiency-bonus: string,
    stats: [SlintStat],
    skills: [SlintSkill],

    cantrips: [SlintShortSpellEntry],
    spells1: [SlintShortSpellEntry],
    spells2: [SlintShortSpellEntry],
    spells3: [SlintShortSpellEntry],
    spells4: [SlintShortSpellEntry],
    spells5: [SlintShortSpellEntry],
    spells6: [SlintShortSpellEntry],
    spells7: [SlintShortSpellEntry],
    spells8: [SlintShortSpellEntry],
    spells9: [SlintShortSpellEntry],

    spell-slots: [string],

    equipment: [SlintItem],

    is-spellcaster: bool,
    spellcasting-ability: string,
    spell-save-dc: string,
    spell-attack-bonus: string,

    languages-proficiencies: string,
    features-traits: string,

    weapons: [SlintWeaponInfo],
}

